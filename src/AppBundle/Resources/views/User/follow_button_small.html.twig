{% if profile.user.isEnabled %}
    {% if  is_following  %}
        <button data-user-id = "{{ app.user.id }}" data-unfollow-url = "{{ path('app_profile_unfollow', {"username" : profile.profileUsername}) }}" data-type="small" class="btn btn-primary-white-hover unfollow_button pull-right">
            <i class="icon-member_check"></i>
        </button>
    {% else %}
        <button data-user-id = "{{ app.user.id }}" data-follow-url = "{{ path('app_profile_follow', {"username" : profile.profileUsername}) }}" data-type="small" class="btn btn-primary-white-hover follow_button pull-right">
            <i class="icon-member_add"></i>
        </button>
    {% endif %}
{% endif %}