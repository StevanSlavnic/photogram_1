{% extends 'base.html.twig' %}

{% block body_id 'profile_index' %}

{% block main %}
    {% block header %}
        <header>
            <nav class="navbar navbar-transparent navbar-fixed-top navbar-color-on-scroll">
                <div class="container">
                    <!-- Brand and toggle get grouped for better mobile display -->
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navigation-example">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href="{{ path('blog_index') }}"><i class="fa fa-chevron-left"></i> Back to Posts</a>
                    </div>

                    <div class="collapse navbar-collapse" id="navigation-example">
                        <ul class="nav navbar-nav navbar-right">
                            {% block header_navigation_links %}
                                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                                    <li>
                                        <a href="#">
                                            {{ app.user.fullName }}
                                        </a>
                                    </li>
                                    {#{% if is_granted('IS_AUTHENTICATED_FULLY') %}#}
                                    {#<li>#}
                                        {#<a href="{{ path('profile_index_edit', {"username": app.user.profile.profileUsername}) }}">#}
                                            {#Edit profile#}
                                        {#</a>#}
                                    {#</li>#}
                                    {#{% endif %}#}
                                    <li>
                                        <a href="{{ path('post_new') }}">
                                            New Post
                                        </a>
                                    </li>
                                {% else %}
                                    <li>
                                        <a href="{{ path('fos_user_security_login') }}">
                                            Login
                                        </a>
                                    </li>
                                    <li>
                                        <a href="{{ path('fos_user_registration_register') }}">
                                            Register
                                        </a>
                                    </li>
                                {% endif %}
                                {#{% if is_granted('ROLE_ADMIN') %}#}
                                    {#<li>#}
                                        {#<a href="{{ path('admin_post_index') }}">#}
                                            {#<i class="fa fa-lock"></i> {{ 'menu.admin'|trans }}#}
                                        {#</a>#}
                                    {#</li>#}
                                {#{% endif %}#}
                            {% endblock %}

                            {% if app.user %}
                                <li>
                                    <a href="{{ path('fos_user_security_logout') }}">
                                        <i class="fa fa-sign-out"></i> {{ 'menu.logout'|trans }}
                                    </a>
                                </li>
                            {% endif %}
                            <li>
                                <a href="https://twitter.com/CreativeTim" target="_blank" class="btn btn-simple">
                                    <i class="fa fa-twitter"></i>
                                </a>
                            </li>
                            <li>
                                <a href="https://www.facebook.com/CreativeTim" target="_blank" class="btn btn-simple">
                                    <i class="fa fa-facebook-square"></i>
                                </a>
                            </li>
                            <li>
                                <a href="https://www.instagram.com/CreativeTimOfficial" target="_blank" class="btn btn-simple">
                                    <i class="fa fa-instagram"></i>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
    {% endblock %}
    {% block body %}
        <div class="wrapper">
            <div class="profile-background" style="background-image: url('{{ asset('./bundles/app/images/rick.jpg') }}');"></div>
                <div class="filter-black"></div>
            </div>
            <div class="profile-content section-nude">
                <div class="container">
                    <div class="row owner">
                        <div class="col-md-2 col-md-offset-5 col-sm-4 col-sm-offset-4 col-xs-6 col-xs-offset-3 text-center">
                            <div class="avatar">
                                {% if profile.imageName is defined %}
                                    <img src="{{ profile.imageName | imagine_filter('my_thumb')  }}" alt="Circle Image" class="img-circle img-responsive img-raised">
                                {% else %}
                                    <img src="https://s3.amazonaws.com/creativetim_bucket/new_logo.png" />
                                {% endif %}

                                {#<img src="https://media.licdn.com/mpr/mpr/shrinknp_400_400/AAEAAQAAAAAAAATCAAAAJDk4ZjEyN2MwLTQ5ZmYtNDE0Ni1hY2FjLTJlZDExZTlmMTUxOQ.jpg9" alt="Circle Image" class="img-circle img-responsive img-raised">#}
                                {#<img src="{{ profile.imageName | imagine_filter('my_thumb')  }}" alt="Circle Image" class="img-circle img-responsive img-raised">#}
                                {#<img src="{{ profile.imageName | imagine_filter('my_thumb')  }}" alt="Circle Image" class="img-circle img-responsive img-raised">#}
                                {#<img src="/images/users/{{ profile.imageName }}" alt="Circle Image" class="img-circle img-responsive img-raised">#}
                            </div>
                            <div class="name">
                                <h4>{{ profile.firstname }} {{ profile.lastname }}<br /><small>{{ profile.occupation }}</small></h4>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 col-md-offset-3 text-center">
                            <p>{{ profile.about }}</p>
                            <br />
                        {% if app.user and user.profile.isOwner(app.user) %}
                            <a href="{{ path('profile_index_edit', {"username": user.profile.profileUsername}) }}" class="btn"><i class="fa fa-cog"></i>Settings</a>
                        {% else %}
                            {% if app.user and is_granted('IS_AUTHENTICATED_FULLY') %}
                            {{ dump(is_following) }}



                            {% endif %}

                        {% endif %}
                        {% if app.user.profile.id != profile.id %}
                                <div class="follow_button_holder in_cover_content">
                                    {% include '@App/User/follow_button_large.html.twig' %}
                                </div>
                                {% endif %}
                        </div>
                    </div>
                    <div class="profile-tabs">
                        <div class="nav-tabs-navigation">
                            <div class="nav-tabs-wrapper">
                                <ul id="tabs" class="nav nav-tabs" data-tabs="tabs">
                                    <li class="active"><a href="#posts" data-toggle="tab">Posts</a></li>
                                    <li><a href="#follows" data-toggle="tab">Follows</a></li>
                                    <li><a href="#following" data-toggle="tab">Following</a></li>
                                    <!--                                 <li><a href="#following" data-toggle="tab">Following</a></li> -->
                                </ul>
                            </div>
                        </div>
                        <div id="my-tab-content" class="tab-content">
                            <div class="tab-pane active text-center" id="posts">
                                {% for post in posts|batch(999999999) %}
                                    <div class="col-md-6 col-md-offset-3 list-masonry">
                                        {% for post in posts %}
                                            <div class="col-md-6 post-in-list">
                                                <a href="{{ path('blog_post', { id: post.id }) }}">
                                                    <img src="{{ asset('images/posts/') }}{{ post.imageName }}" class="img-rounded img-responsive" />
                                                </a>
                                            </div>
                                        {% endfor %}
                                    </div>
                                {% else %}
                                    <div class="well">
                                        <h4>Still no posts...</h4>
                                        <a href="{{ path('post_new') }}" class="btn">Create your first post</a>
                                    </div>
                                {% endfor %}
                            </div>
                            <div class="tab-pane" id="follows">
                                <div class="row">
                                    <div class="col-md-6 col-md-offset-3">
                                        <ul class="list-unstyled follows">
                                            <li>

                                                <div class="row">
                                                    <div class="col-md-2 col-md-offset-0 col-xs-3 col-xs-offset-2">
                                                        <img src="../assets/paper_img/flume.jpg" alt="Circle Image" class="img-circle img-no-padding img-responsive">
                                                    </div>
                                                    <div class="col-md-7 col-xs-4">
                                                        <h6>Flume<br /><small>Musical Producer</small></h6>
                                                    </div>
                                                    <div class="col-md-3 col-xs-2">
                                                        <div class="unfollow" rel="tooltip" title="Unfollow">
                                                            <label class="checkbox" for="checkbox1" >
                                                                <input type="checkbox" value="" id="checkbox1" data-toggle="checkbox" checked>
                                                            </label>
                                                        </div>
                                                    </div>
                                                </div>
                                            </li>
                                            <hr />
                                            <li>
                                                <div class="row">
                                                    <div class="col-md-2 col-md-offset-0 col-xs-3 col-xs-offset-2">
                                                        <img src="../assets/paper_img/banks.jpg" alt="Circle Image" class="img-circle img-no-padding img-responsive">
                                                    </div>
                                                    <div class="col-md-7 col-xs-4">
                                                        <h6>Banks<br /><small>Singer</small></h6>
                                                    </div>
                                                    <div class="col-md-3 col-xs-2">
                                                        <div class="unfollow" rel="tooltip" title="Unfollow">
                                                            <label class="checkbox" for="checkbox1" >
                                                                <input type="checkbox" value="" id="checkbox1" data-toggle="checkbox" checked>
                                                            </label>
                                                        </div>
                                                    </div>
                                                </div>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            <div class="tab-pane text-center" id="following">
                                <h3 class="text-muted">Not following anyone yet :(</h3>
                                <btn class="btn btn-warning btn-fill">Find artists</btn>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    {% endblock %}

{% endblock %}
