{% if profile.user.isEnabled %}
    {% if is_following %}
        <button data-user-id = "{{ app.user.id }}" data-unfollow-url = "{{ path('app_profile_unfollow', {"username" : profile.profileUsername}) }}" data-type="large" class="btn btn-success btn-fill unfollow_button">
            <i class="icon-member_add"></i>
            Following
        </button>
    {% else %}
        <button data-user-id = "{{ app.user.id }}" data-follow-url = "{{ path('app_profile_follow', {"username" : profile.profileUsername}) }}" data-type="large" class="btn btn-success follow_button">
            <i class="icon-member_add"></i>
            Follow
        </button>
    {% endif %}
{% endif %}